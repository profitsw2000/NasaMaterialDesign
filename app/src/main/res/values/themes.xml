<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NasaMaterialDesign" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--Стили для отдельных компонентов-->
        <item name="chipStyle">@style/myChipStyle</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyle</item>
        <item name="floatingActionButtonStyle">@style/myFABStyle</item>
    </style>
    
    <style name="Cosmic" parent="Theme.NasaMaterialDesign">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorCosmic</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorCosmic</item>
        <item name="colorOnPrimary">@color/primaryLightColorCosmic</item>
        <item name="colorOnSurface">#FFF9C4</item>
        <item name="colorSurface">@color/primaryLightColorCosmic</item>
        <item name="android:colorBackground">@color/primaryColorCosmic</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorCosmic</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorCosmic</item>
        <item name="colorOnSecondary">@color/secondaryLightColorCosmic</item>
        <!-- Шрифты. -->
        <item name="android:fontFamily">@font/lobster</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
    </style>

